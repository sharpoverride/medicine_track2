{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MedicineTrack.Api/bin/Debug/net9.0/MedicineTrack.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MedicineTrack.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Aspire AppHost",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-apphost",
            "program": "${workspaceFolder}/src/MedicineTrack.AppHost/bin/Debug/net9.0/MedicineTrack.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MedicineTrack.AppHost",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}
